{% extends 'base.html.twig' %}

{% block title %}Permission{% endblock %}

{% block body %}
    <h1>Permission</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Type</th>
                <td>{{ permission.type }}</td>
            </tr>
            <tr>
                <th>ObjectType</th>
                <td>{{ permission.objectType }}</td>
            </tr>
            <tr>
                <th>ObjectId</th>
                <td>{{ permission.objectId }}</td>
            </tr>
            <tr>
                <th>Pemission</th>
                <td>{{ permission.pemission }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ permission.id }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ permission.created ? permission.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ permission.updated ? permission.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('permission_index') }}">back to list</a>

    <a href="{{ path('permission_edit', {'id': permission.id}) }}">edit</a>

