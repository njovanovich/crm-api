{% extends 'base.html.twig' %}

{% block title %}Relationship index{% endblock %}

{% block body %}
    <h1>Relationship index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Aliases</th>
                <th>StartTime</th>
                <th>EndTime</th>
                <th>Id</th>
                <th>Created</th>
                <th>Updated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for relationship in relationships %}
            <tr>
                <td>{{ relationship.name }}</td>
                <td>{{ relationship.type }}</td>
                <td>{{ relationship.aliases }}</td>
                <td>{{ relationship.startTime ? relationship.startTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ relationship.endTime ? relationship.endTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ relationship.id }}</td>
                <td>{{ relationship.created ? relationship.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ relationship.updated ? relationship.updated|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('relationship_show', {'id': relationship.id}) }}">show</a>
                    <a href="{{ path('relationship_edit', {'id': relationship.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('relationship_new') }}">Create new</a>
{% endblock %}
