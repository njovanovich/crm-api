{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ user.created ? user.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ user.updated ? user.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>LastLoggedIn</th>
                <td>{{ user.lastLoggedIn }}</td>
            </tr>
            <tr>
                <th>LastIp</th>
                <td>{{ user.lastIp }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('crm_user_index') }}">back to list</a>

    <a href="{{ path('crm_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('crm_user/_delete_form.html.twig') }}
{% endblock %}
