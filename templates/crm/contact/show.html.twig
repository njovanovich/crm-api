{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ contact.created ? contact.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ contact.updated ? contact.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ContactType</th>
                <td>{{ contact.contactType }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('crm_contact_index') }}">back to list</a>

    <a href="{{ path('crm_contact_edit', {'id': contact.id}) }}">edit</a>

    {{ include('crm_contact/_delete_form.html.twig') }}
{% endblock %}
