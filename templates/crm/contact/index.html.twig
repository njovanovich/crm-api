{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <h1>Contact index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Created</th>
                <th>Updated</th>
                <th>ContactType</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.created ? contact.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ contact.updated ? contact.updated|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ contact.contactType }}</td>
                <td>
                    <a href="{{ path('crm_contact_show', {'id': contact.id}) }}">show</a>
                    <a href="{{ path('crm_contact_edit', {'id': contact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('crm_contact_new') }}">Create new</a>
{% endblock %}
