{% extends 'base.html.twig' %}

{% block title %}Email index{% endblock %}

{% block body %}
    <h1>Email index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Subject</th>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for email in emails %}
            <tr>
                <td>{{ email.id }}</td>
                <td>{{ email.created ? email.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ email.updated ? email.updated|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ email.subject }}</td>
                <td>{{ email.text }}</td>
                <td>
                    <a href="{{ path('crm_email_show', {'id': email.id}) }}">show</a>
                    <a href="{{ path('crm_email_edit', {'id': email.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('crm_email_new') }}">Create new</a>
{% endblock %}
