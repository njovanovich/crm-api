{% extends 'base.html.twig' %}

{% block title %}Job index{% endblock %}

{% block body %}
    <h1>Job index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Created</th>
                <th>Updated</th>
                <th>JobId</th>
                <th>Name</th>
                <th>DeliveryDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.id }}</td>
                <td>{{ job.created ? job.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ job.updated ? job.updated|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ job.jobId }}</td>
                <td>{{ job.name }}</td>
                <td>{{ job.deliveryDate ? job.deliveryDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('crm_job_show', {'id': job.id}) }}">show</a>
                    <a href="{{ path('crm_job_edit', {'id': job.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('crm_job_new') }}">Create new</a>
{% endblock %}
