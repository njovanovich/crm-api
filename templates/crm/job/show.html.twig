{% extends 'base.html.twig' %}

{% block title %}Job{% endblock %}

{% block body %}
    <h1>Job</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ job.id }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ job.created ? job.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ job.updated ? job.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>JobId</th>
                <td>{{ job.jobId }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ job.name }}</td>
            </tr>
            <tr>
                <th>DeliveryDate</th>
                <td>{{ job.deliveryDate ? job.deliveryDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('crm_job_index') }}">back to list</a>

    <a href="{{ path('crm_job_edit', {'id': job.id}) }}">edit</a>

    {{ include('crm_job/_delete_form.html.twig') }}
{% endblock %}
