{% block title %}Lead{% endblock %}

{% block body %}
    <h1>Lead</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lead.id }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ lead.created ? lead.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ lead.updated ? lead.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ lead.name }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ lead.amount }}</td>
            </tr>
        </tbody>
    </table>

