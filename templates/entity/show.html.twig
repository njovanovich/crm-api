{% extends 'base.html.twig' %}

{% block title %}Entity{% endblock %}

{% block body %}
    <h1>Entity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ entity.created ? entity.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ entity.updated ? entity.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('entity_index') }}">back to list</a>

    <a href="{{ path('entity_edit', {'id': entity.id}) }}">edit</a>

    {{ include('entity/_delete_form.html.twig') }}
{% endblock %}
