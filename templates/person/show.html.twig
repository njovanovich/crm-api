{% extends 'base.html.twig' %}

{% block title %}Person{% endblock %}

{% block body %}
    <h1>Person</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ person.created ? person.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ person.updated ? person.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ person.lastName }}</td>
            </tr>
            <tr>
                <th>MiddleName</th>
                <td>{{ person.middleName }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ person.firstName }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ person.gender }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ person.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('person_index') }}">back to list</a>

    <a href="{{ path('person_edit', {'id': person.id}) }}">edit</a>

    {{ include('person/_delete_form.html.twig') }}
{% endblock %}
