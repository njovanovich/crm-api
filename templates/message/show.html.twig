{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
    <h1>Message</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Protocol</th>
                <td>{{ message.protocol }}</td>
            </tr>
            <tr>
                <th>Sent</th>
                <td>{{ message.sent ? message.sent|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Received</th>
                <td>{{ message.received ? message.received|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ message.created ? message.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ message.updated ? message.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('message_index') }}">back to list</a>

    <a href="{{ path('message_edit', {'id': message.id}) }}">edit</a>

    {{ include('message/_delete_form.html.twig') }}
{% endblock %}
