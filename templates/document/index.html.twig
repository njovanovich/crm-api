{% extends 'base.html.twig' %}

{% block title %}Document index{% endblock %}

{% block body %}
    <h1>Document index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Size</th>
                <th>Content</th>
                <th>Id</th>
                <th>Created</th>
                <th>Updated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for document in documents %}
            <tr>
                <td>{{ document.name }}</td>
                <td>{{ document.type }}</td>
                <td>{{ document.size }}</td>
                <td>{{ document.content }}</td>
                <td>{{ document.id }}</td>
                <td>{{ document.created ? document.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ document.updated ? document.updated|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('document_show', {'id': document.id}) }}">show</a>
                    <a href="{{ path('document_edit', {'id': document.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('document_new') }}">Create new</a>
{% endblock %}
